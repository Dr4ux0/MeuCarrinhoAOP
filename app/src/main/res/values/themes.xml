<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base -->
    <style name="Base.AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Você pode manter isso como base genérica -->
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />

    <!-- AOP: TEMA 1 – Azul Elegante -->
    <style name="AOPTheme.Elegante" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1565C0</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03A9F4</item>
        <item name="android:windowBackground">#E3F2FD</item>
        <item name="android:textColor">#0D47A1</item>
        <item name="android:buttonStyle">@style/AOPButton</item>
    </style>

    <!-- AOP: TEMA 3 – Simples e Leve -->
    <style name="AOPTheme.Simples" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:buttonStyle">@style/AOPButton.Simples</item>
    </style>

    <!-- Estilo dos botões padrão (azul) -->
    <style name="AOPButton" parent="Widget.Material3.Button">
        <item name="android:background">#2196F3</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Botões grandes para tema simples -->
    <style name="AOPButton.Simples" parent="Widget.Material3.Button">
        <item name="android:background">#1976D2</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>